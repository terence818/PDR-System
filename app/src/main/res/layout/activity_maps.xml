<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical">

        <Spinner
            android:id="@+id/state_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="4dp"
            android:spinnerMode="dropdown" />

    <fragment xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context=".LocationGeofence" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/disaster" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:text="@string/active_disaster"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sunny" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:text="@string/safe_area"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/charity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"

                    android:layout_margin="2dp"
                    android:text="@string/shelter"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <Spinner
            android:id="@+id/city_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="4dp"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/state_name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/water_level"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:progressDrawable="@drawable/blueprogress"
                android:layout_height="wrap_content"
                android:progress="25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/water_level"
                android:layout_alignEnd="@id/water_level"
                android:layout_alignRight="@id/water_level"
                android:layout_alignBottom="@id/water_level"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="#00000000"
                android:text="@string/water_level"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/water_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/water_level"
                android:layout_alignStart="@id/water_level"
                android:layout_alignLeft="@id/water_level"
                android:layout_alignBottom="@id/water_level"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:background="#00000000"
                android:text="@string/_0"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/resource_available"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:progressDrawable="@drawable/greenprogress"
                android:layout_height="wrap_content"
                android:progress="25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/resource_available"
                android:layout_alignEnd="@id/resource_available"
                android:layout_alignRight="@id/resource_available"
                android:layout_alignBottom="@id/resource_available"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="#00000000"
                android:text="@string/resource_available"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/resource_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/resource_available"
                android:layout_alignStart="@id/resource_available"
                android:layout_alignLeft="@id/resource_available"
                android:layout_alignBottom="@id/resource_available"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:background="#00000000"
                android:text="@string/_0"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/severity_level"
                android:progressDrawable="@drawable/redprogress"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="25" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/severity_level"
                android:layout_alignEnd="@id/severity_level"
                android:layout_alignRight="@id/severity_level"
                android:layout_alignBottom="@id/severity_level"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:background="#00000000"
                android:text="@string/severity"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/severity_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/severity_level"
                android:layout_alignStart="@id/severity_level"
                android:layout_alignLeft="@id/severity_level"
                android:layout_alignBottom="@id/severity_level"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:background="#00000000"
                android:text="@string/_0"
                android:textColor="@color/white" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>